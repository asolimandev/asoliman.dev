{{#if resume.speaking.length}}
<section class="section">
  <header>
    <h2 class='section-title'>Public Speaking <span class="item-count">({{resume.speaking.length}})</span></h2>
  </header>
  <section id="speaking">
    {{#each resume.speaking}}
    <section class="speaking-item">
      {{#if topic}}
        {{#if @first}}
        <input id="speaking-item-{{@index}}" type="checkbox" class="toggle-item" checked="checked" />
        {{else}}
        <input id="speaking-item-{{@index}}" type="checkbox" class="toggle-item" />
        {{/if}}
        <label for="speaking-item-{{@index}}"></label>
      {{/if}}

      <header class="clear">
        <div class="header-left">
          {{#if event}}
          <div class="event">
            {{event}}
          </div>
          {{/if}}
          {{#if topic}}
          <div class="topic">
            {{topic}}
          </div>
          {{/if}}
        </div>
        {{#if date}}
        <div class="date">
          {{MY date}}
        </div>
        {{/if}}
      </header>
      
      <div class="item">
		{{#if location}}
			{{#isObject location}}
			<span class="location">
				<span class="fas fa-map-marker-alt"></span>
				{{#if city}}
				<span class="city">{{city}},</span>
				{{/if}}
				{{#if countryCode}}
				<span class="countryCode">({{countryCode}})</span>
				{{/if}}
				{{#if region}}
				<span class="region">{{region}}</span>
				{{/if}}
			</span>
			{{else}}
			<span class="location">
				<span class="fas fa-map-marker-alt"></span>
				<span>{{location}}</span>
			</span>
			{{/isObject}}
	    {{/if}}
		{{#if reference}}
        <span class="reference">
          <a target="_blank" href="{{reference}}">View the Presentation</a>
        </span>
        {{/if}}
      </div>
    </section>
    {{/each}}
  </section>
</section>
{{/if}}
